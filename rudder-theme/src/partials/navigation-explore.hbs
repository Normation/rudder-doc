<div class="navigation-explore{{#unless page.navigation}} is-active{{/unless}}" data-panel="explore">
  {{#if page.component}}
  <div class="context">
    <span class="title">{{page.component.title}}</span>
    <span class="version">{{page.version}}</span>
  </div>
  {{/if}}
  <ul class="components">
    {{#each site.components}}
    <li class="component{{#if (eq this @root.page.component)}} is-current{{/if}}">
      <span class="title">{{{./title}}}</span>
      <ul class="versions">
        {{#each ./versions}}
        <li class="version
          {{~#if (and (eq ../this @root.page.component) (eq this @root.page.componentVersion))}} is-current{{/if~}}
          {{~#if (eq this ../latestVersion)}} is-latest{{/if}}">
          <a href="{{{relativize @root.page.url ./url}}}">{{./version}}</a>
        </li>
        {{/each}}
        {{~#if (and @root.site.url (eq this.name "reference"))}}
        <li class="version">
          <a href="https://docs.rudder.io/reference/4.3/">4.3</a>
	</li>
	<li class="version">
          <a href="https://docs.rudder.io/reference/4.1/">4.1</a>
        </li>
        {{/if}}
      </ul>
    </li>
    {{/each}}
    <li class="component">
      <span class="title">API reference</span>
        <ul class="versions">
	  <li class="version is-latest">
	    <a href="https://docs.rudder.io/api">current</a>
	  </li>
        </ul>
      </span>
    </li>
    <li class="component">
      <span class="title">Changelogs</span>
        <ul class="versions">
          {{#each site.components}}
          {{#if (eq this.name "reference")}}
          {{#each ./versions}}
          <li class="version {{~#if (eq this ../latestVersion)}} is-latest{{/if}}">
            <a href="https://www.rudder-project.org/changelog-{{./version}}">{{./version}}</a>
          </li>
          {{/each}}
          {{/if}}
          {{/each}}
          {{#if site.url}}
          <li class="version">
            <a href="https://www.rudder-project.org/changelog-4.3">4.3</a>
          </li>
          <li class="version">
            <a href="https://www.rudder-project.org/changelog-4.1">4.1</a>
          </li>
          {{/if}}
        </ul>
      </span>
    </li>
  </ul>
</div>
