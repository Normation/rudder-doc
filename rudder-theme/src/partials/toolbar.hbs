{{~#if (eq page.componentVersion.version "6.1") }}
<div class="banner-warning warning-beta">
  <span class="icon-warning"></span>
  This version is under development
</div>
{{else}}
{{~#if (eq page.componentVersion.version "4.3") }}
<div class="banner-warning warning-deprecated">
  <span class="icon-warning"></span>
  This version is deprecated
</div>
{{/if}}
{{/if}}
<div class="toolbar" role="navigation">
  <button class="navigation-toggle"></button>
  {{#if site.homeUrl}}
  <a href="{{relativize page.url site.homeUrl}}" class="home-link{{#if page.home}} is-current{{/if}}"></a>
  {{/if}}
{{> breadcrumbs}}
{{> page-versions}}
  {{#if (and page.editUrl (not page.origin.private))}}
  <div class="edit-this-page"><a href="{{page.editUrl}}">Edit this Page</a></div>
  {{/if}}
</div>
